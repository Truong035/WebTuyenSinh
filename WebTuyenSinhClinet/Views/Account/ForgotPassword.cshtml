@model string

@{
    ViewData["Title"] = "Forgot Password";
}
<div class="container col-8 p-1">
    <h2 class="text-body">Quên mật khẩu</h2>

    <form asp-action="ForgotPassword" class="col-10 p-5" method="post">
        <div class="form-group">
            <label>Email</label>
            <input name="email" class="form-control" />
        </div>
        <div class="form-group mt-2">
           
            <button class="btn btn-primary" type="submit">Gửi</button>
        </div>
        
    </form>
</div>



